{
  "name": "dni-robocze",
  "version": "0.3.0",
  "private": true,
  "packageManager": "pnpm@10.16.0",
  "homepage": "https://kalkulatordniroboczych.pl/",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "export": "next build && next export",
    "generate:sitemap": "next-sitemap",
    "lint": "eslint .",
    "prettier:fix": "prettier --write src",
    "prepush": "next build && npm run generate:sitemap",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "build:holidays": "pnpm holidays2json --pick PL --min",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "pnpm build:holidays && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "Chrome 118",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "15.5.3",
    "@opennextjs/cloudflare": "^1.8.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-slot": "^1.1.1",
    "@xstate/react": "^3.2.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "date-holidays": "^3.23.7",
    "lucide-react": "^0.321.0",
    "next": "15.5.3",
    "react": "19.1.1",
    "react-day-picker": "8.10.1",
    "react-dom": "19.1.1",
    "sharp": "^0.33.3",
    "slugify": "^1.6.6",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "xstate": "^4.38.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/mdx": "^2.0.13",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.19.0",
    "eslint-config-next": "15.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.33",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "wrangler": "^4.36.0"
  },
  "volta": {
    "node": "22.19.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.13",
      "@types/react-dom": "19.1.9"
    }
  }
}
