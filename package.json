{
  "name": "dni-robocze",
  "version": "0.3.0",
  "private": true,
  "packageManager": "pnpm@10.16.0",
  "homepage": "https://kalkulatordniroboczych.pl/",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "export": "next build && next export",
    "generate:sitemap": "next-sitemap",
    "lint": "eslint .",
    "prettier:fix": "prettier --write src",
    "prepush": "next build && npm run generate:sitemap",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "jest --ci --detectOpenHandles",
    "build:holidays": "pnpm holidays2json --pick PL --min",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "pnpm build:holidays && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "Chrome 118",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "15.5.3",
    "@opennextjs/cloudflare": "^1.8.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@sanity/image-url": "^1.2.0",
    "@xstate/react": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "date-holidays": "^3.26.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-sanity": "^11.1.0",
    "react": "19.1.1",
    "react-day-picker": "8.10.1",
    "react-dom": "19.1.1",
    "server-only": "^0.0.1",
    "sharp": "^0.34.3",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "xstate": "^5.21.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/mdx": "^2.0.13",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.9.2",
    "wrangler": "^4.36.0"
  },
  "volta": {
    "node": "22.19.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.13",
      "@types/react-dom": "19.1.9"
    }
  }
}